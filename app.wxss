page {
    display: flex;
    flex-direction: column;

    box-sizing: border-box;
    width: 100%;
    padding-right: 20px;
    padding-left: 20px;

    background-color: #f5f5f5;

    align-items: center;
}

.container {
    width: 100%;
    padding-bottom: 65px;
}

.next-button {
    font-size: 16px;

    position: fixed;
    bottom: 0;
    left: 0;

    width: 100%;
    margin-top: 20px;
    padding: 10px 20px;

    cursor: pointer;
    transition: background-color .3s ease;
    text-align: center;

    color: white;
    border: none;
    border-radius: 4px;
    background-color: #007bff;
}

.next-button:disabled {
    cursor: not-allowed;

    background-color: #ccc;
}

.skip-button {
  position: absolute;
  top: 14px;
  right: 14px;
  cursor: pointer;
  font-size: 16px;
  color: #007bff;
  font-weight: 500;
}
