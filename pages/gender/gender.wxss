.container {
  padding-top: 20px;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.gender-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 6px;
    box-sizing: border-box;
    border: 1px solid transparent;
}
.gender-wrapper.active {
    border: 1px solid #ccc;
    box-shadow: 0 0 10px;
}