/* index.wxss */
.container {
  padding: 20px;
  background-color: #f0f4f8; /* 健身风格的背景色 */
  font-family: 'Arial', sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  box-sizing: border-box;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #007bff; /* 健身风格的强调色 */
  margin-bottom: 30px;
  text-align: center;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
}

.radio-group {
  width: 80%;
  max-width: 400px;
}

.radio {
  display: flex;
  align-items: center;
  margin: 15px 0;
  font-size: 18px;
  color: #333;
}

.radio radio {
  margin-right: 10px;
}



