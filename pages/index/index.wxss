/* index.wxss */
.container {
  padding: 20px;
  background-color: #f0f4f8; /* 健身风格的背景色 */
  font-family: 'Arial', sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.title {
  font-size: 32px;
  font-weight: bold;
  color: #007bff; /* 健身风格的强调色 */
  margin-bottom: 20px;
  text-align: center;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
}

.description {
  font-size: 18px;
  color: #333;
  margin-bottom: 30px;
  text-align: center;
  line-height: 1.6;
}

.next-button {
  background-color: #007bff; /* 健身风格的强调色 */
  color: #fff;
  font-size: 20px;
  padding: 10px 20px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.next-button:active {
  background-color: #0056b3; /* 点击时的强调色 */
}