.container {
  padding: 20px;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wrapper {
  display: flex;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

input {
  margin-top: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  width: 100%;
  font-size: 16px;
}

.hint {
  margin-top: 10px;
  font-size: 14px;
  color: #888;
}

.unit {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-left: 10px;
    font-size: 20px;
  }
