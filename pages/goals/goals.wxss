/* index.wxss */
.container {
  padding: 20px;
  background-color: #f0f4f8; /* 健身风格的背景色 */
  font-family: 'Arial', sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-bottom: 90px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #007bff; /* 健身风格的强调色 */
  margin-bottom: 30px;
  text-align: center;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
}

.goals-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  margin-bottom: 20px;
  border-radius: 10px;
  box-sizing: border-box;
  border: 2px solid transparent;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  width: 80%;
  max-width: 300px;
}

.goals-wrapper.active {
  border-color: #007bff; /* 健身风格的强调色 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.goal-image {
  width: 100px;
  height: 100px;
  margin-bottom: 10px;
}

.goal-name {
  font-size: 20px;
  color: #333;
  text-align: center;
}



