.title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.goals-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 6px;
    box-sizing: border-box;
    border: 1px solid transparent;
}
.goals-wrapper.active {
    border: 1px solid #ccc;
    box-shadow: 0 0 10px;
}