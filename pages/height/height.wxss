.container {
  padding: 20px;
}
.wrapper {
  display: flex;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.unit {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10px;
  font-size: 20px;
}

.primary-button {
  margin-top: 20px;
  padding: 10px;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 4px;
  width: 100%;
  text-align: center;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.primary-button:disabled {
  background-color: #ccc;
}

.secondary-button {
  margin-top: 10px;
  padding: 10px;
  background-color: #f0f0f0;
  color: rgba(0, 0, 0, 0.85);
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  width: 100%;
  text-align: center;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.secondary-button:hover {
  background-color: #e6f7ff;
}
